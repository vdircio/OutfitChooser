<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/new_images"
    android:background="@android:color/transparent"
    app:behavior_peakHeight="80dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:cardCornerRadius="2dp"
        app:cardElevation="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            android:padding="16dp">

            <View
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:background="@color/cardview_light_background"
                tools:layout_editor_absoluteX="174dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Images"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="51dp" />

            <Button
                android:id="@+id/addTop"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/plussign"
                tools:layout_editor_absoluteX="60dp"
                tools:layout_editor_absoluteY="150dp" />

            <Button
                android:id="@+id/addBottom"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/plussign"
                tools:layout_editor_absoluteX="200dp"
                tools:layout_editor_absoluteY="150dp" />

            <Button
                android:id="@+id/addHat"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/plussign"
                tools:layout_editor_absoluteX="60dp"
                tools:layout_editor_absoluteY="300dp" />

            <Button
                android:id="@+id/addShoes"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/plussign"
                tools:layout_editor_absoluteX="200dp"
                tools:layout_editor_absoluteY="300dp" />

            <TextView
                android:id="@+id/addHatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add image of hat"
                tools:layout_editor_absoluteX="60dp"
                tools:layout_editor_absoluteY="245dp" />

            <TextView
                android:id="@+id/addTopText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add image of top"
                tools:layout_editor_absoluteX="200dp"
                tools:layout_editor_absoluteY="245dp" />

            <TextView
                android:id="@+id/addBottomText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add image of bottom"
                tools:layout_editor_absoluteX="60dp"
                tools:layout_editor_absoluteY="400dp" />

            <TextView
                android:id="@+id/addShoesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add image of shoes"
                tools:layout_editor_absoluteX="200dp"
                tools:layout_editor_absoluteY="400dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
